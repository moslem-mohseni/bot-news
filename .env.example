# نمونه فایل متغیرهای محیطی
# این فایل را به .env تغییر نام دهید و مقادیر را تنظیم کنید

# Telegram API
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=your_phone
TELEGRAM_BOT_TOKEN=your_bot_token

# Twitter API
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=crypto_news_bot
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Application Settings
COLLECTION_INTERVAL=600  # دوره جمع‌آوری اخبار (ثانیه)
MIN_IMPORTANCE_SCORE=0.5  # حداقل امتیاز اهمیت برای انتشار
DEBUG=False  # وضعیت دیباگ
